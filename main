#include <iostream>
#include <vector>
using namespace std;
vector<int> factor;
int userInput,counter = 0,factorCheck = 1,counter2 = 0;
char orderLargeFirst[2];
bool keepRunning = true;

void orderLargeFirstFunc()
{
  cout << "Largest factor first mode: on" << endl;
  cout << "Enter a value: ";
  cin >> userInput;
  counter = userInput;
  while (counter > 0)
  {
    if(userInput%counter == 0)
    {
      factor.push_back(counter);
    }
    counter--;
  }
  while (counter2 < factor.size()-1)
  {
    if (factor.size() == 2)
    {
      cout << "The number is prime." << endl;
    }
    else if (counter2 < (factor.size()/2))
    {
      cout << factor[counter2] <<" times " << userInput/factor[counter2] << " equals " << userInput << endl;
    }
    else if (factor[counter2]*factor[counter2] == userInput) //checks for perfect square factor
    {
      cout << factor[counter2] <<" times " << userInput/factor[counter2] << " equals " << userInput << endl;
    }
    counter2++;
  }
}

void orderLargeNotFirstFunc()
{
  cout << "Largest factor first mode: off" << endl;
  cout << "Enter a value: ";
  cin >> userInput;
  while (counter < userInput)
  {
    if(userInput%factorCheck == 0)
    {
      factor.push_back(factorCheck);
    }
    factorCheck++;
    counter++;
  }

  while (counter2 < factor.size()-1)
  {
    if (factor.size() == 2)
    {
      cout << "The number is prime." << endl;
    }
    else if (counter2 < (factor.size()/2))
    {
      cout << factor[counter2] <<" times " << userInput/factor[counter2] << " equals " << userInput << endl;
    }
    else if (factor[counter2]*factor[counter2] == userInput) //checks for perfect square factor
    {
      cout << factor[counter2] <<" times " << userInput/factor[counter2] << " equals " << userInput << endl;
    }
    counter2++;
  }
}







int main(){
  while(keepRunning)
  {
    cout << "Would you like to see the largest factors first? (y/n) (q to quit) " << endl;
    cin.getline (orderLargeFirst,256);
      if (orderLargeFirst[0] == 'y')
      {
        orderLargeFirstFunc();
        cin.getline (orderLargeFirst,256); //this is here because getline is weird and runs through the loop again without asking for user input and goes straight to the error. acts as a buffer for getline. Think back to that one friday lab
        
      }
      else if (orderLargeFirst[0] == 'n')
      {
        orderLargeNotFirstFunc();
        cin.getline (orderLargeFirst,256);//same as above
        
      }
      else if (orderLargeFirst[0] == 'q')
      {
        cout << "Quitting now..." << endl;
        break;
      }
      
      else
      {
        cout << "ERROR: You did not enter either \"y\" , \"n\" or \"q\" as the first character." << endl;
        cout << "Restarting..." << endl << endl;
        
      }
      
  }
}
